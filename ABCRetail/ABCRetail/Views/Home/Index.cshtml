@{
    ViewData["Title"] = "Dashboard";
    Layout = "_Layout";
}

<h1 class="display-4 text-center mb-4">Welcome to ABCRetail </h1>

<div class="container bg-emerald-green">
    <div class="row">
        <!-- Form for Uploading an Image -->
        <div class="col-md-6 col-lg-3 mb-4">
            <div class="card">
                <div class="card-header text-gold">
                    <h2 class="h5 mb-0"><i class="bi bi-upload"></i> Upload Image</h2>
                </div>
                <div class="card-body">
                    <form asp-action="UploadImage" method="post" enctype="multipart/form-data">
                        <div class="mb-3">
                            <input class="form-control" type="file" name="file" />
                        </div>
                        <button type="submit" class="btn btn-gold"><i class="bi bi-cloud-upload"></i> Upload</button>
                    </form>
                </div>
            </div>
        </div>

        <!-- Form for Adding a Customer Profile -->
        <div class="col-md-6 col-lg-3 mb-4">
            <div class="card">
                <div class="card-header text-gold">
                    <h2 class="h5 mb-0"><i class="bi bi-person-plus"></i> Add Customer Profile</h2>
                </div>
                <div class="card-body">
                    <form asp-action="AddCustomerProfile" method="post">
                        <div class="mb-3">
                            <input class="form-control" type="text" name="FirstName" placeholder="First Name" required />
                        </div>
                        <div class="mb-3">
                            <input class="form-control" type="text" name="LastName" placeholder="Last Name" required />
                        </div>
                        <div class="mb-3">
                            <input class="form-control" type="email" name="Email" placeholder="Email" required />
                        </div>
                        <div class="mb-3">
                            <input class="form-control" type="text" name="PhoneNumber" placeholder="Phone Number" required />
                        </div>
                        <button type="submit" class="btn btn-gold"><i class="bi bi-person-plus-fill"></i> Add Profile</button>
                    </form>
                </div>
            </div>
        </div>

        <!-- Form for Processing an Order -->
        <div class="col-md-6 col-lg-3 mb-4">
            <div class="card">
                <div class="card-header text-gold">
                    <h2 class="h5 mb-0"><i class="bi bi-cart-check"></i> Process Order</h2>
                </div>
                <div class="card-body">
                    <form asp-action="ProcessOrder" method="post">
                        <div class="mb-3">
                            <input class="form-control" type="text" name="orderId" placeholder="Order ID" required />
                        </div>
                        <button type="submit" class="btn btn-gold"><i class="bi bi-box-arrow-in-right"></i> Process</button>
                    </form>
                </div>
            </div>
        </div>

        <!-- Form for Uploading a Contract -->
        <div class="col-md-6 col-lg-3 mb-4">
            <div class="card">
                <div class="card-header text-gold">
                    <h2 class="h5 mb-0"><i class="bi bi-file-earmark-arrow-up"></i> Upload Contract</h2>
                </div>
                <div class="card-body">
                    <form asp-action="UploadContract" method="post" enctype="multipart/form-data">
                        <div class="mb-3">
                            <input class="form-control" type="file" name="file" />
                        </div>
                        <button type="submit" class="btn btn-gold"><i class="bi bi-cloud-upload"></i> Upload</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
